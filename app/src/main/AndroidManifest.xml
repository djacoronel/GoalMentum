<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.djacoronel.goalmentum">

  <application
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".AndroidApplication"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    android:allowBackup="true"
    android:fullBackupContent="@xml/backup_descriptor">
    <activity
      android:label="@string/app_name"
      android:name=".presentation.ui.activities.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:label="@string/title_activity_edit_goal"
      android:name=".presentation.ui.activities.AddGoalActivity"/>
    <activity
      android:label="@string/title_activity_view_goal"
      android:name=".presentation.ui.activities.GoalActivity"/>
    <activity android:name=".presentation.ui.activities.MilestoneActivity">
    </activity>
  </application>

</manifest>