<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:animateLayoutChanges="true"
  android:padding="0dp"
  tools:layout_editor_absoluteX="0dp"
  tools:layout_editor_absoluteY="0dp">

  <Space
    android:id="@+id/space"
    android:layout_width="16dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    card_view:layout_constraintStart_toStartOf="parent"
    card_view:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/expanded_milestone_card_text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:minLines="2"
    android:text="@string/milestone_description_placeholder"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    card_view:layout_constraintBottom_toTopOf="@+id/cardView"
    card_view:layout_constraintEnd_toStartOf="@+id/expand_button"
    card_view:layout_constraintStart_toEndOf="@+id/expanded_achieved_icon"
    card_view:layout_constraintTop_toTopOf="parent"/>

  <ImageView
    android:id="@+id/expanded_achieved_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="19dp"
    android:visibility="visible"
    card_view:layout_constraintStart_toEndOf="@+id/space"
    card_view:layout_constraintTop_toTopOf="parent"
    card_view:srcCompat="@drawable/ic_check_black_24dp"/>
  <ImageView
    android:id="@+id/expand_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:contentDescription="@string/collapse_milestone_card"
    android:scaleType="centerCrop"
    card_view:layout_constraintEnd_toEndOf="parent"
    card_view:layout_constraintTop_toTopOf="parent"
    card_view:srcCompat="@drawable/ic_expand_less_black_40dp"/>

  <android.support.v7.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    card_view:cardCornerRadius="0dp"
    card_view:layout_constraintBottom_toBottomOf="parent"
    card_view:layout_constraintEnd_toEndOf="parent"
    card_view:layout_constraintStart_toStartOf="parent"
    card_view:layout_constraintTop_toBottomOf="@id/expanded_milestone_card_text">

    <include
      android:id="@+id/placeholder"
      layout="@layout/empty_work_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="visible"/>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/work_recycler"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>